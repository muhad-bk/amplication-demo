datasource postgres {
  provider = "postgresql"
  url      = env("POSTGRESQL_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt                    DateTime                     @default(now())
  email                        String?                      @unique
  failedLoginAttempt           Float?
  failedLoginTime              DateTime?
  firstName                    String?
  id                           String                       @id @default(cuid())
  isActive                     Boolean?
  isLocked                     Boolean?
  isRemoved                    Boolean?
  lastName                     String?
  password                     String
  phone                        String                       @unique
  roles                        String[]
  updatedAt                    DateTime                     @updatedAt
  userAuthenticationStrategies UserAuthenticationStrategy[]
  username                     String                       @unique
}

model AuthenticationStrategy {
  createdAt                    DateTime                     @default(now())
  description                  String?
  id                           String                       @id @default(cuid())
  isActive                     Boolean?
  isRemoved                    Boolean?
  provider                     String                       @unique
  updatedAt                    DateTime                     @updatedAt
  userAuthenticationStrategies UserAuthenticationStrategy[]
}

model UserAuthenticationStrategy {
  authenticationStrategy   AuthenticationStrategy? @relation(fields: [authenticationStrategyId], references: [id])
  authenticationStrategyId String?
  createdAt                DateTime                @default(now())
  expiresWithin            String?
  externalIdentifier       String?
  id                       String                  @id @default(cuid())
  isActive                 Boolean?
  isRemoved                Boolean?
  passwordHash             String?
  passwordResetToken       String?
  updatedAt                DateTime                @updatedAt
  user                     User?                   @relation(fields: [userId], references: [id])
  userId                   String?
  verificationToken        String?
}